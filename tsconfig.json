{
	"compilerOptions": {
		"target": "ES2020",
		"allowJs": true,
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["es6", "ES2020", "DOM", "DOM.Iterable"],
		"skipLibCheck": true,
		"paths": {
			"@/*": ["./src/*"]
		},

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "preserve",

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"src/KonvaEditor/interface",
		"src/utils/formatLayersData.js"
	],
	"references": [{ "path": "./tsconfig.node.json" }]
}
